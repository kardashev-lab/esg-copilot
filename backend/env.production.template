# ESG AI Co-Pilot - Production Environment Configuration
# Copy this file to .env and configure with your actual values

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================

# Environment settings
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
PROJECT_NAME="ESG AI Co-Pilot"
VERSION=1.0.0
API_V1_STR=/api/v1

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Secret key for JWT tokens and encryption (CHANGE THIS!)
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters

# API Keys for authentication (comma-separated)
# API_KEYS=api-key-1,api-key-2,api-key-3

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# IP Filtering (comma-separated)
# BLOCKED_IPS=192.168.1.100,10.0.0.50
# ALLOWED_IPS=  # If set, only these IPs are allowed

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=60

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database
# DATABASE_URL=postgresql://username:password@localhost:5432/esg_copilot
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ChromaDB Configuration
CHROMA_DB_PATH=./chroma_db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis for caching and rate limiting
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_POOL_SIZE=10

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================

UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=.pdf,.docx,.xlsx,.csv,.txt

# ============================================================================
# CORS SETTINGS
# ============================================================================

# Allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Metrics and monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Logging
# LOG_FILE=./logs/app.log

# External monitoring services
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# DATADOG_API_KEY=your-datadog-api-key

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Application performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
MAX_REQUEST_SIZE=104857600  # 100MB

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ============================================================================
# SSL/TLS SETTINGS
# ============================================================================

# SSL Certificate paths
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem
# SSL_CA_FILE=/path/to/ca.pem

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# S3 Backup Configuration
# S3_BUCKET=your-backup-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-s3-access-key
# S3_SECRET_KEY=your-s3-secret-key

# ============================================================================
# FEATURE FLAGS
# ============================================================================

ENABLE_CHAT=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_REPORT_GENERATION=true
ENABLE_COMPLIANCE_CHECK=true
ENABLE_SUPPLY_CHAIN=true

# ============================================================================
# DOCKER & DEPLOYMENT SETTINGS
# ============================================================================

# Database for Docker Compose
DB_PASSWORD=your-secure-database-password

# Frontend URL
REACT_APP_API_URL=https://api.yourdomain.com

# ============================================================================
# ADDITIONAL PRODUCTION SETTINGS
# ============================================================================

# Trusted hosts (comma-separated)
TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Additional security headers
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# Session settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
